<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <top.wzmyyj.wzm_sdk.widget.CircleImageView
                android:id="@+id/img_store_logo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@color/colorGray_e"
                app:border_color="@color/colorLine"
                app:border_width="0.1dp" />

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorGray_7"
                android:textSize="13sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorGray_5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_trade_state"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorPay"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goods_sum_price"
                android:textColor="@color/colorGray_7"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_amount_paid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorGray_7"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_goods_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@color/colorGray_e" />

        <!--<TextView-->
        <!--android:id="@+id/tv_trade_state_next"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:background="@drawable/bg_text_pay_stroke"-->
        <!--android:gravity="center_vertical"-->
        <!--android:textColor="@color/colorPay"-->
        <!--android:textSize="14sp" />-->

    </LinearLayout>

</LinearLayout>
