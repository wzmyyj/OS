<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/click_bg"
            android:contentDescription="@string/icon"
            android:padding="2.5dp"
            android:src="@mipmap/ic_search" />


        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input_search"
            android:hint="@string/user_and_place"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="@color/colorGray_7"
            android:textSize="14sp"
            tools:ignore="LabelFor,TextFields" />

        <ImageView
            android:id="@+id/img_clear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/click_bg"
            android:contentDescription="@string/icon"
            android:padding="2.5dp"
            android:src="@color/colorGray_e" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/colorGray_7"
            android:textSize="16sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorLine" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabIndicatorHeight="1dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorPay"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance2"
        app:tabTextColor="@color/colorGray_7">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>


</LinearLayout>