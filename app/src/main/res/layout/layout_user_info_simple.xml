<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/user"
            android:textColor="@color/colorGray_5"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_user_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/_50"
            android:textColor="@color/colorGray_5"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.dl7.tag.TagLayout
            android:id="@+id/tl_tag"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:tag_layout_bg_color="@color/colorClarity"
            app:tag_layout_border_width="0dp"
            app:tag_layout_random_color="true"
            app:tag_layout_shape="arc"
            app:tag_view_border_color="@color/colorClarity"
            app:tag_view_text_color="@color/colorWhite"
            app:tag_view_text_size="8sp" />

        <TextView
            android:id="@+id/tv_user_distance"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="@string/_50"
            android:textColor="@color/colorGray_4"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="2"
            android:textColor="@color/colorGray_6"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>
