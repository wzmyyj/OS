<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="1dp"
            android:text="@string/os_distance"
            android:textColor="@color/colorGray_6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textColor="@color/colorGray_6"
            android:textSize="14sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/bsb_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:bsb_bubble_color="@color/colorPrimary"
            app:bsb_max="100"
            app:bsb_min="1"
            app:bsb_progress="50"
            app:bsb_second_track_color="@color/colorPrimary"
            app:bsb_second_track_size="1dp"
            app:bsb_thumb_color="@color/colorPrimary"
            app:bsb_track_color="@color/colorGray_b"
            app:bsb_track_size="1.5dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="1dp"
            android:text="@string/sex"
            android:textColor="@color/colorGray_6"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:id="@+id/ll_sex_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:contentDescription="@string/icon"
                    android:src="@mipmap/ic_setting_sex_l" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:contentDescription="@string/icon"
                    android:src="@mipmap/ic_setting_sex_r" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_sex_1"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/male"
                tools:ignore="NestedWeights" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:id="@+id/ll_sex_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:contentDescription="@string/icon"
                    android:src="@mipmap/ic_setting_sex_l" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:contentDescription="@string/icon"
                    android:src="@mipmap/ic_setting_sex_r" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_sex_3"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/unlimited"
                tools:ignore="NestedWeights" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:id="@+id/ll_sex_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:contentDescription="@string/icon"
                    android:src="@mipmap/ic_setting_sex_l" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:contentDescription="@string/icon"
                    android:src="@mipmap/ic_setting_sex_r" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_sex_2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/female"
                tools:ignore="NestedWeights" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="1dp"
            android:text="@string/age"
            android:textColor="@color/colorGray_6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_age_rang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="@string/_18_to_38"
            android:textColor="@color/colorGray_6"
            android:textSize="14sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/bsb_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:bsb_max="55"
            app:bsb_min="18"
            app:bsb_progress="38"
            app:bsb_second_track_color="@color/colorPrimary"
            app:bsb_second_track_size="1dp"
            app:bsb_thumb_color="@color/colorPrimary"
            app:bsb_track_color="@color/colorGray_b"
            app:bsb_track_size="1.5dp" />

    </FrameLayout>
</LinearLayout>
