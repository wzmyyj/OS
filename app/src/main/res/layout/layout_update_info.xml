<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <top.wzmyyj.wzm_sdk.widget.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:src="@color/colorGray_e"
            app:border_color="@color/colorLittleBlue"
            app:border_width="1sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/update_avatar"
            android:textColor="@color/colorGray_6"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_u_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/bg"
                android:src="@color/colorGray_e" />

            <ImageView
                android:id="@+id/img_u_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/bg"
                android:src="@color/colorGray_e" />

            <ImageView
                android:id="@+id/img_u_3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/bg"
                android:src="@color/colorGray_e" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_u_4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/bg"
                android:src="@color/colorGray_e" />

            <ImageView
                android:id="@+id/img_u_5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/bg"
                android:src="@color/colorGray_e" />

            <ImageView
                android:id="@+id/img_u_6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/bg"
                android:src="@color/colorGray_e" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_user_score"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_text_score_1"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/_99"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/bt_validate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_button_selector_1"
                android:text="@string/validate_your_account"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:orientation="horizontal"-->
            <!--tools:ignore="UseCompoundDrawables">-->

            <!--<ImageView-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:contentDescription="@string/icon"-->
            <!--android:src="@color/colorGray_b" />-->

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginStart="5dp"-->
            <!--android:gravity="center_vertical"-->
            <!--android:text="@string/validate_your_account"-->
            <!--android:textColor="@color/colorWhite"-->
            <!--android:textSize="16sp" />-->
            <!--</LinearLayout>-->
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="5dp"
            android:text="@string/about_me"
            android:textColor="@color/colorGray_6"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/colorGray_e"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_signature"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorClarity"
                android:gravity="start"
                android:hint="@string/self_introduction"
                android:inputType="text"
                android:singleLine="false"
                android:textColor="@color/colorGray_7"
                android:textSize="14sp"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/tv_signature_num"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="end"
                android:text="@string/_50"
                android:textColor="@color/colorGray_9"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="5dp"
            android:text="@string/name"
            android:textColor="@color/colorGray_6"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorGray_e"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorClarity"
                android:hint="@string/please_input_nickname"
                android:inputType="text"
                android:textColor="@color/colorGray_7"
                android:textSize="14sp"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="5dp"
            android:text="@string/birthday"
            android:textColor="@color/colorGray_6"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorGray_e"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_birthday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorClarity"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/please_pick_you_birthday"
                android:inputType="text"
                android:textColor="@color/colorGray_7"
                android:textSize="14sp"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="5dp"
            android:text="@string/school"
            android:textColor="@color/colorGray_6"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorGray_e"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_school"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorClarity"
                android:hint="@string/add_school"
                android:inputType="text"
                android:textColor="@color/colorGray_7"
                android:textSize="14sp"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="5dp"
            android:text="@string/company"
            android:textColor="@color/colorGray_6"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorGray_e"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_company"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorClarity"
                android:hint="@string/add_company"
                android:inputType="text"
                android:textColor="@color/colorGray_7"
                android:textSize="14sp"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="5dp"
            android:text="@string/job"
            android:textColor="@color/colorGray_6"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorGray_e"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_job"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorClarity"
                android:hint="@string/add_job"
                android:inputType="text"
                android:textColor="@color/colorGray_7"
                android:textSize="14sp"
                tools:ignore="LabelFor" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp" />


</LinearLayout>
