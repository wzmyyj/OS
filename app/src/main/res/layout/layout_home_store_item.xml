<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="7dp"
        android:layout_weight="1">

        <top.wzmyyj.wzm_sdk.widget.RoundAngleImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/bg"
            android:scaleType="fitXY"
            android:src="@color/colorGray_e"
            app:border_color_r="@color/colorLine"
            app:border_width_r="0.5dp"
            app:radiusAll="10dp" />

        <top.wzmyyj.wzm_sdk.widget.CircleImageView
            android:id="@+id/img_store_avatar"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:src="@color/colorGray_e"
            app:border_color="@color/colorWhite"
            app:border_width="1dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/app_name"
        android:textColor="@color/colorGray_6"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_store_os_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="@string/_0"
            android:textColor="@color/colorNumRed"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="@string/people_are_meeting"
            android:textColor="@color/colorGray_7"
            android:textSize="12sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <top.wzmyyj.wzm_sdk.widget.CircleImageView
                android:id="@+id/img_u_1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="32.5dp"
                android:layout_marginStart="32.5dp"
                android:src="@color/colorGray_e"
                android:visibility="gone"
                app:border_color="@color/colorWhite"
                app:border_width="1dp" />

            <top.wzmyyj.wzm_sdk.widget.CircleImageView
                android:id="@+id/img_u_2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:src="@color/colorGray_e"
                android:visibility="gone"
                app:border_color="@color/colorWhite"
                app:border_width="1dp" />

            <top.wzmyyj.wzm_sdk.widget.CircleImageView
                android:id="@+id/img_u_3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="17.5dp"
                android:layout_marginStart="17.5dp"
                android:src="@color/colorGray_e"
                android:visibility="gone"
                app:border_color="@color/colorWhite"
                app:border_width="1dp" />

            <top.wzmyyj.wzm_sdk.widget.CircleImageView
                android:id="@+id/img_u_4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@color/colorGray_e"
                android:visibility="gone"
                app:border_color="@color/colorWhite"
                app:border_width="1dp" />
        </FrameLayout>

    </LinearLayout>


</LinearLayout>
