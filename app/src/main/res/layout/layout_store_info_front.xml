<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="bottom"
        android:background="@color/colorAhp_Black_4"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <top.wzmyyj.wzm_sdk.widget.CircleImageView
                android:id="@+id/img_store_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@color/colorGray_b"
                app:border_color="@color/colorWhite"
                app:border_width="1dp" />

            <TextView
                android:id="@+id/tv_store_fresh"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_aph"
                android:gravity="center"
                android:src="@color/colorGray_b"
                android:text="@string/another_batch"
                android:textColor="@color/colorWhite"
                android:textSize="13sp" />
        </FrameLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabBackground="@color/colorClarity"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabMaxWidth="100dp"
            app:tabMinWidth="20dp"
            app:tabMode="scrollable"
            app:tabPadding="-1dp"
            app:tabPaddingBottom="-1dp"
            app:tabPaddingEnd="-1dp"
            app:tabPaddingStart="-1dp"
            app:tabPaddingTop="-1dp"
            app:tabSelectedTextColor="@color/colorWhite"
            app:tabTextColor="@color/colorGray_b" />

        <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/rv_bottom"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <!--</android.support.v7.widget.RecyclerView>-->


    </LinearLayout>

</FrameLayout>
